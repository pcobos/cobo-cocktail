<div class="container">

  <div class="drink-name m-3">
    <h1><%= @cocktail.name %></h1>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
  </div>

  <div class="row">
    <div class="ingredients col-6">
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %> - <%= dose.description %></li>
      <% end %>
    </ul>
    </div>

    <div class="ingredients-form col-6">
      <%= render 'doses/new' %>
    </div>
  </div>
</div>