<div class="banner">
  <div class="container">
    <h1>Calderon Drinks</h1>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class: "btn btn-warning" %>
  </div>
</div>
<div class="container">
  <h2 class="text-center mt-2">Most popular cocktails</h2>
  <% @cocktails.each do |cocktail| %>
  <div class="row">
    <div class="card col-4" style="background-image: url(https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=749&q=80);">
      <%# <img src="https://images.unsplash.com/photo-1470337458703-46ad1756a187?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=749&q=80" alt="cocktail"> %>
      <p class="card-cocktail-name"><%= cocktail.name %></p>
    </div>
  </div>
  <% end %>
</div>

<div class="photos">
  <%= cl_image_tag("uybaq4u7iypj5hhnfc2k",
      width: 150, height: 150, crop: :thumb, gravity: :face) %>
</div>