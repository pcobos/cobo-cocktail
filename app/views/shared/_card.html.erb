<div class="cards">
    <div class="row justify-content-center">
  <% @cocktails.each do |cocktail| %>
      <div class="card-cocktail col-3 m-2" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill if cocktail.photo.attached? %>');">
        <%= cocktail.name %>
      </div>
  <% end %>
    </div>
</div>
